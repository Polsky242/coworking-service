<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="polsky">
        <createTable schemaName="develop" tableName="users">
            <column name="id" type="bigint" defaultValueComputed="nextval('develop.user_id_seq')">
                <constraints primaryKey="true" primaryKeyName="user_pkey" nullable="false"/>
            </column>
            <column name="login" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="password" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="registration_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql>COMMENT ON COLUMN develop.users.id IS 'user id';</sql>
        <sql>COMMENT ON COLUMN develop.users.login IS 'user login';</sql>
        <sql>COMMENT ON COLUMN develop.users.registration_date IS 'registration date';</sql>
        <sql>COMMENT ON COLUMN develop.users.password IS 'user password';</sql>
        <sql>COMMENT ON COLUMN develop.users.role IS 'user role';</sql>
        <sql>COMMENT ON COLUMN develop.users.update_date IS 'updating date';</sql>
    </changeSet>

    <changeSet id="2" author="polsky">
        <createTable schemaName="develop" tableName="workspace_type">
            <column name="id" type="bigint" defaultValueComputed="nextval('develop.workspace_type_id_seq')">
                <constraints primaryKey="true" primaryKeyName="workspace_type_pkey" nullable="false"/>
            </column>
            <column name="type_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql>COMMENT ON COLUMN develop.workspace_type.id IS 'workspace type id';</sql>
        <sql>COMMENT ON COLUMN develop.workspace_type.type_name IS 'workspace type name';</sql>
    </changeSet>

    <changeSet id="3" author="polsky">
        <createTable schemaName="develop" tableName="workspace">
            <column name="id" type="bigint" defaultValueComputed="nextval('develop.workspace_id_seq')">
                <constraints primaryKey="true" primaryKeyName="workspace_pkey" nullable="false"/>
            </column>
            <column name="start_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="end_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="create_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="update_date" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <sql>COMMENT ON COLUMN develop.workspace.id IS 'workspace id';</sql>
        <sql>COMMENT ON COLUMN develop.workspace.start_date IS 'start date of rent';</sql>
        <sql>COMMENT ON COLUMN develop.workspace.end_date IS 'end date of rent';</sql>
        <sql>COMMENT ON COLUMN develop.workspace.create_date IS 'creation date';</sql>
        <sql>COMMENT ON COLUMN develop.workspace.update_date IS 'updating date';</sql>
        <sql>COMMENT ON COLUMN develop.workspace.type_id IS 'type id';</sql>
        <sql>COMMENT ON COLUMN develop.workspace.user_id IS 'user id';</sql>
    </changeSet>
</databaseChangeLog>